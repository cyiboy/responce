<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleimage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:src="@drawable/profile" />

    <TextView
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="16dp"
        android:textStyle="bold"
        android:id="@+id/edit"
        android:layout_marginBottom="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/circleimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-40dp"
        android:text="edit photo" />

    <LinearLayout
        android:id="@+id/name"
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edit"
        android:layout_marginTop="-3dp">

        <EditText
            android:id="@+id/fist_name"
            android:layout_width="190dp"
            android:layout_height="40dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"

            android:hint="first name"
            android:inputType="text|textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true" />

        <EditText
            android:id="@+id/last_name"
            android:layout_width="192dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/fist_name"
            android:hint="last name"
            android:inputType="text|textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true" />
    </LinearLayout>

   <LinearLayout
       android:id="@+id/edittext"
       android:orientation="vertical"
       android:layout_below="@id/name"
       android:layout_margin="12dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <EditText
           android:id="@+id/phone_number"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="phone nuumber"
           android:inputType="number"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/address"
           android:layout_width="336dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="address"
           android:inputType="textPostalAddress"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/gender"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="gender"
           android:inputType="text"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/emengency_name"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="emengency name"
           android:inputType="textPersonName"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/emengency_number"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="emengency number"
           android:inputType="number"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/ID_type"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="ID type"
           android:inputType="text|number"
           android:selectAllOnFocus="true"
           android:singleLine="true" />

       <EditText
           android:id="@+id/ID_number"
           android:layout_width="334dp"
           android:layout_height="40dp"
           android:layout_marginBottom="10dp"
           android:hint="ID number"
           android:inputType="number"
           android:selectAllOnFocus="true"
           android:singleLine="true" />
   </LinearLayout>


    <Button
android:layout_below="@id/edittext"
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:textStyle="bold" />
</RelativeLayout>